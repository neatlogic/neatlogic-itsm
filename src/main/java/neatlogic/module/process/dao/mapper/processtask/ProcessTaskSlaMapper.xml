    <select id="getAllProcessTaskSlaNotify" resultType="neatlogic.framework.process.dto.ProcessTaskSlaNotifyVo">
        SELECT id,
               `sla_id` AS slaId,
               `hash`,
               `trigger_time` as triggerTime,
               `config`
