        FROM `processtask_step_sla_delay`
        WHERE `sla_id` IN
        <foreach collection="list" item="slaId" open="(" separator="," close=")">
            #{slaId}
        </foreach>
    </select>

    <insert id="insertProcessTaskSlaNotify" parameterType="neatlogic.framework.process.dto.ProcessTaskSlaNotifyVo">
