    <select id="getProcessTaskSlaById" parameterType="java.lang.Long" resultType="neatlogic.framework.process.dto.ProcessTaskSlaVo">
        SELECT `processtask_id` AS processTaskId,
               `id`,
               `name`,
               `config`
